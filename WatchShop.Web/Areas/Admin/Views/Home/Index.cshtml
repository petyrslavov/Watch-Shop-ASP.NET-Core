@using WatchShop.Models

@{
    ViewData["Title"] = "Home Page";
}

<div class="header-bottom">
    <div class="container">
        <div class="header">
            <div class="col-md-9 header-left">
                <div class="top-nav">
                    <ul class="memenu skyblue">
                        <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="grid">
                            <a href="#">Watches</a>
                            <div class="mepanel">
                                <div class="row">
                                    <div class="col1 me-one">
                                        <h4>Shop</h4>
                                        <ul>
                                            <li><a asp-area="" asp-controller="Product" asp-action="All">All</a></li>
                                            <li><a asp-area="" asp-controller="Product" asp-action="Category" asp-route-id="Men">Men</a></li>
                                            <li><a asp-area="" asp-controller="Product" asp-action="Category" asp-route-id="Woman">Woman</a></li>
                                            <li><a asp-area="" asp-controller="Product" asp-action="Category" asp-route-id="Kids">Kids</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="grid">
                            <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="grid">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Add">Add Watch</a>
                        </li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
            </div>
            <form method="get">
                <div class="col-md-3 header-right">
                    <div class="search-bar">
                        <input type="text" name="searchTerm" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                        <input asp-area="" asp-controller="Product" asp-action="Search" type="submit" value="">
                    </div>
                </div>
            </form>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--banner-starts-->
<div class="bnr" id="home">
    <div id="top" class="callbacks_container">
        <ul class="rslides" id="slider4">
            <li>
                <img src="~/images/bnr-1.jpg" alt="" />
            </li>
            <li>
                <img src="~/images/bnr-2.jpg" alt="" />
            </li>
            <li>
                <img src="~/images/bnr-3.jpg" alt="" />
            </li>
        </ul>
    </div>
    <div class="clearfix"> </div>
</div>
<!--banner-ends-->
<!--Slider-Starts-Here-->
<script src="~/js/responsiveslides.min.js"></script>
<script>
    // You can also use "$(window).load(function() {"
    $(function () {
        // Slideshow 4
        $("#slider4").responsiveSlides({
            auto: true,
            pager: true,
            nav: true,
            speed: 500,
            namespace: "callbacks",
            before: function () {
                $('.events').append("<li>before event fired.</li>");
            },
            after: function () {
                $('.events').append("<li>after event fired.</li>");
            }
        });

    });
</script>
<!--End-slider-script-->
